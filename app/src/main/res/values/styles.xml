<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonGeneric">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:fontFamily">Arial</item>

    </style>

    <style name="ButtonNumber" parent="ButtonGeneric">
        <item name="android:layout_weight">7</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@color/colorGrayDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
44
    <style name="ButtonSign" parent="ButtonGeneric">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TablePad">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="NumberTablePad" parent="TablePad">
    </style>
</resources>
